<!DOCTYPE html>
<html>
  <head>
    <title>HiCamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript">
      window.hicampLogo = "<%= image_url('hicamp2.PNG') %>";
      window.favicon = "<%= image_url('favicon.png') %>";
    </script>
    <link rel="shortcut icon" type="image/png" href="https://djqvcbmmgpti5.cloudfront.net/assets/favicon/favicon-9b19af215b3f5e88da114996bdd1038bc4a8390c67e16c7eebc2318ffafee7da.ico">
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>

  </body>
</html>
